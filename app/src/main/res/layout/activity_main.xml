<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:outlineAmbientShadowColor="#000000"
    android:outlineSpotShadowColor="#000000"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="730dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:text="Application For Employment"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:paddingStart="5sp"
                    android:text="Position You Are Applying For:"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/position"
                    android:layout_width="325dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="sample"
                    android:paddingStart="10sp"
                    android:textColorHint="#00FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    tools:textColorHint="#00FFFFFF" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:paddingStart="5sp"
                    android:text="Desired Salary"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/position"
                    app:layout_constraintTop_toTopOf="@+id/position" />

                <EditText
                    android:id="@+id/salary"
                    android:layout_width="325dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="sample"
                    android:paddingStart="10sp"
                    android:textColorHint="#00FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    tools:textColorHint="#00FFFFFF" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:paddingStart="5sp"
                    android:text="Date Available for Work:"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/salary"
                    app:layout_constraintTop_toTopOf="@+id/salary" />

                <EditText
                    android:id="@+id/dateAvailable"
                    android:layout_width="325dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:ems="10"
                    android:hint="sample"
                    android:paddingStart="10sp"
                    android:textColorHint="#00FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:textColorHint="#00FFFFFF" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:background="@drawable/black_box"
                android:translationX="5dp">

                <CheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="No"
                    app:layout_constraintStart_toEndOf="@+id/checkBox"
                    app:layout_constraintTop_toTopOf="@+id/checkBox" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="36dp"
                    android:text="Yes"
                    app:layout_constraintStart_toEndOf="@+id/textView18"
                    app:layout_constraintTop_toBottomOf="@+id/email" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:paddingStart="5dp"
                    android:text="Are you a U.S. Citizen?"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/textView16"
                    app:layout_constraintTop_toBottomOf="@+id/textView16" />

                <EditText
                    android:id="@+id/zip"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="sample"
                    android:inputType="textPersonName"
                    android:textColorHint="#00FFFFFF"
                    app:layout_constraintStart_toEndOf="@+id/state"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <EditText
                    android:id="@+id/LastN"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ems="10"
                    android:hint="sample"
                    android:inputType="textPersonName"
                    android:textColorHint="#00000000"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Middle"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/FirstN"
                    app:layout_constraintTop_toBottomOf="@+id/MiddleN" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="First Name"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/LastN"
                    app:layout_constraintTop_toBottomOf="@+id/FirstN" />

                <EditText
                    android:id="@+id/MiddleN"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="sample"
                    android:inputType="textPersonName"
                    android:textColorHint="#00FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/FirstN"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="350dp"
                    android:layout_height="25dp"
                    android:background="@color/black"
                    android:paddingStart="10sp"
                    android:text="PERSONAL INFORMATION"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Last Name"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/LastN"
                    app:layout_constraintTop_toBottomOf="@+id/LastN" />

                <EditText
                    android:id="@+id/FirstN"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="sample"
                    android:inputType="textPersonName"
                    android:textColorHint="#00FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/LastN"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="sample"
                    android:inputType="textPersonName"
                    android:textColorHint="#00FFFFFF"
                    app:layout_constraintStart_toStartOf="@+id/LastN"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Address"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/address"
                    app:layout_constraintTop_toBottomOf="@+id/address" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="sample"
                    android:inputType="textPersonName"
                    android:textColorHint="#00FFFFFF"
                    app:layout_constraintStart_toStartOf="@+id/textView9"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <EditText
                    android:id="@+id/state"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="sample"
                    android:inputType="textPersonName"
                    android:textColorHint="#00FFFFFF"
                    app:layout_constraintStart_toEndOf="@+id/city"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="City"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/city"
                    app:layout_constraintTop_toBottomOf="@+id/city" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="State"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/city"
                    app:layout_constraintTop_toBottomOf="@+id/state" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Zip"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/zip"
                    app:layout_constraintTop_toBottomOf="@+id/zip" />

                <EditText
                    android:id="@+id/homePhone"
                    android:layout_width="165dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="sample"
                    android:inputType="textPersonName"
                    android:textColorHint="#00FFFFFF"
                    app:layout_constraintStart_toStartOf="@+id/textView10"
                    app:layout_constraintTop_toBottomOf="@+id/textView10" />

                <EditText
                    android:id="@+id/cellPhone"
                    android:layout_width="165dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="sample"
                    android:inputType="textPersonName"
                    android:textColorHint="#00FFFFFF"
                    app:layout_constraintStart_toEndOf="@+id/homePhone"
                    app:layout_constraintTop_toBottomOf="@+id/textView10" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Home Phone"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/homePhone"
                    app:layout_constraintTop_toBottomOf="@+id/homePhone" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Cell Phone"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/homePhone"
                    app:layout_constraintTop_toBottomOf="@+id/cellPhone" />

                <EditText
                    android:id="@+id/secnum"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="sample"
                    android:inputType="textPersonName"
                    android:textColorHint="#00FFFFFF"
                    app:layout_constraintStart_toStartOf="@+id/textView13"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Social Security Number"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/secnum"
                    app:layout_constraintTop_toBottomOf="@+id/secnum" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="sample"
                    android:inputType="textPersonName"
                    android:textColorHint="#00FFFFFF"
                    app:layout_constraintStart_toStartOf="@+id/textView15"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Email Address"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/email"
                    app:layout_constraintTop_toBottomOf="@+id/email" />

                <CheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Yes"
                    app:layout_constraintStart_toStartOf="@+id/checkBox"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="145dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="35dp"
                    android:paddingStart="5dp"
                    android:text="Have you ever been convicted of a felony?"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/textView18"
                    app:layout_constraintTop_toBottomOf="@+id/textView18" />

                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    app:layout_constraintStart_toStartOf="@+id/checkbox2"
                    app:layout_constraintTop_toTopOf="@+id/checkbox3" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="177dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="8dp"
                    android:paddingStart="5dp"
                    android:text="If selected for employment, are you willing to submit to a pre-employment drug screening test?"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView19"
                    app:layout_constraintTop_toBottomOf="@+id/textView19" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Yes"
                    app:layout_constraintStart_toStartOf="@+id/checkbox3"
                    app:layout_constraintTop_toBottomOf="@+id/checkbox3" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    app:layout_constraintStart_toStartOf="@+id/checkBox7"
                    app:layout_constraintTop_toTopOf="@+id/checkBox5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/black_box"
                android:translationX="5dp">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="350dp"
                    android:layout_height="25dp"
                    android:background="@color/black"
                    android:paddingStart="10dp"
                    android:text="EDUCATION"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="87.5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blackgrey_box"
                    android:paddingTop="11dp"
                    android:text="School Name"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/textView21"
                    app:layout_constraintTop_toBottomOf="@+id/textView21" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="87.5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blackgrey_box"
                    android:paddingTop="10dp"
                    android:text="Location"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/textView22"
                    app:layout_constraintTop_toTopOf="@+id/textView22" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="58.33dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blackgrey_box"
                    android:paddingTop="5dp"
                    android:text="Years Attended"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/textView23"
                    app:layout_constraintTop_toTopOf="@+id/textView23" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="58.33dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blackgrey_box"
                    android:paddingTop="5dp"
                    android:text="Degree Received"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/textView24"
                    app:layout_constraintTop_toTopOf="@+id/textView24" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="58.33dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blackgrey_box"
                    android:paddingTop="10dp"
                    android:text="Major"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/textView25"
                    app:layout_constraintTop_toTopOf="@+id/textView25" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>